<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/wifi_ipv4_preference_title">

        <EditTextPreference
            android:inputType="numberDecimal"
            app:defaultValue="@string/default_wifi_source_port_ipv4"
            app:key="@string/wifi_source_port_ipv4_key"
            app:summary="@string/wifi_source_port_ipv4_summary"
            app:title="@string/wifi_source_port_ipv4_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:inputType="textUri"
            app:defaultValue="@string/default_wifi_nexthop_ipv4"
            app:key="@string/wifi_nexthop_ipv4_key"
            app:summary="@string/wifi_nexthop_ipv4_summary"
            app:title="@string/wifi_nexthop_ipv4_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:inputType="numberDecimal"
            app:defaultValue="@string/default_wifi_nexthop_port_ipv4"
            app:key="@string/wifi_nexthop_port_ipv4_key"
            app:summary="@string/wifi_nexthop_port_ipv4_summary"
            app:title="@string/wifi_nexthop_port_ipv4_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>